{% comment %} {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
{%- endunless -%}

{%- unless settings.type_body_font.system? -%}
    <link rel="preload" as="font" href="{{ settings.type_body_font | font_url }}" type="font/woff2" crossorigin>
{%- endunless -%}
{%- unless settings.type_header_font.system? -%}
    <link rel="preload" as="font" href="{{ settings.type_header_font | font_url }}" type="font/woff2" crossorigin>
{%- endunless -%} {% endcomment %}

{% comment %} <link href="https://fonts.cdnfonts.com/css/futura-std-4" rel="stylesheet"> {% endcomment %}


{%- assign font_source = settings.body_font_source -%}
{%- assign font_type = settings.body_font -%}

{%- case font_source -%}

    {%- when 'shopify' -%}
        {% comment %} {%- assign body_font = settings['font_1_shopify'] -%} {% endcomment %}
        {%- assign font = settings.font_1_shopify -%}

        {%- liquid
            assign font_bold = body_font | font_modify: 'weight', 'bold'
            assign font_italic = body_font | font_modify: 'style', 'italic'
        %}
        {% comment %} assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic' {% endcomment %}

        {% style %}
            {{ font | font_face: font_display: 'swap' }}
            {{ font_bold | font_face: font_display: 'swap' }}
            {{ font_italic | font_face: font_display: 'swap' }}
            {% comment %} {{ body_font_bold_italic | font_face: font_display: 'swap' }} {% endcomment %}
            {% comment %} {{ settings.type_header_font | font_face: font_display: 'swap' }} {% endcomment %}


            :root {
            --font-family: {{ font.family }}, {{ font.fallback_families }};
            --font-style: {{ font.style }};
            --font-weight: {{ font.weight }};
            {% comment %} --font-weight-bold: {{ settings.type_body_font.weight | plus: 300 | at_most: 1000 }}; {% endcomment %}

            {% comment %} --font-h-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
            --font-h: {{ settings.type_header_font.style }};
            --font-h-weight: {{ settings.type_header_font.weight }}; {% endcomment %}
            }

            body {
                font-family: var(--font-family);
                font-style: var(--font-style);
                font-weight: var(--font-weight);
            } 
        {% endstyle %}

    {%- when 'google' -%}
        {% comment %} {%- assign heading_font = settings.font_1_google | append: ':400,700&display=swap' -%}

        <link href="https://fonts.googleapis.com/css?family={{ heading_font | url_escape }}" rel="stylesheet">

        <style>
        h1, h2, h3, h4, h5, h6 {
            font-family: "heading_font";
        }
        </style> {% endcomment %}
    {%- when 'self_hosted' -%}
        {% comment %} {%- assign heading_font = settings.font_1_self_hosted | append: '.woff2' -%}

        <link rel="preload" as="font" href="{{ heading_font | file_url }}" type="font/woff2" crossorigin>

        <style>
        @font-face {
            font-family: "heading_font";
            src: url("{{ heading_font | file_url }}") format("woff2"),
                url("{{ heading_font | replace: '.woff2', '.woff' | file_url }}") format("woff");
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "heading_font";
        }
        </style> {% endcomment %}
    
{%- endcase -%}


