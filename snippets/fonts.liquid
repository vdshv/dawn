{% comment %} {%- assign h_font_source = settings.heading_font_source -%}

{%- case h_font_source -%}
    {%- when 'google' -%}
        {%- assign heading_font = settings.font_1_google | append: ':400,700&display=swap' -%}

        <link href="https://fonts.googleapis.com/css?family={{ heading_font | url_escape }}" rel="stylesheet">

        <style>
        h1, h2, h3, h4, h5, h6 {
            font-family: "heading_font";
        }
        </style>
    {%- when 'self_hosted' -%}
        {%- assign heading_font = settings.font_1_self_hosted | append: '.woff2' -%}

        <link rel="preload" as="font" href="{{ heading_font | file_url }}" type="font/woff2" crossorigin>

        <style>
        @font-face {
            font-family: "heading_font";
            src: url("{{ heading_font | file_url }}") format("woff2"),
                url("{{ heading_font | replace: '.woff2', '.woff' | file_url }}") format("woff");
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "heading_font";
        }
        </style>

    {%- when 'shopify' -%}
    {%- assign heading_font = settings.font_1_shopify -%}
    <style>
        h1, h2, h3, h4, h5, h6 {
        font-family: "heading_font";
        }
    </style>
{%- endcase -%} {% endcomment %}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,300;0,400;0,600;0,700;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">



<style>
    h1, h2, h3, h4, h5, h6, p, a {
        font-family: 'Noto Sans', sans-serif;
    }

    p {
        font-weight: 600;
        font-style: italic;
    }
    a {
        font-weight: 700;
        font-style: italic;
    }
    h1 {
        font-weight: 400;
        font-style: italic;
    }
    h2 {
        font-weight: 300;
    }
    h3 {
        font-weight: 400;
    }
    h4 {
        font-weight: 600;
    }
    h5 {
        font-weight: 700;
    }
    h6 {
        font-weight: 300;
        font-style: italic;
    }
</style>