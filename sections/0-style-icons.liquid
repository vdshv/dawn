<style>
    {% comment %} These CSS variables are used in /src/scss/common.scss {% endcomment %}
        :root {
            {% for block in section.blocks %}
                --{{ block.type }}-size-desktop: {{ block.settings.icon_size_desktop }}px;
                --{{ block.type }}-size-tablet: {{ block.settings.icon_size_tablet }}px;
                --{{ block.type }}-size-mobile: {{ block.settings.icon_size_mobile }}px;
            {% endfor %}
        }
        

        .icon {
            display: inline-block;
        }
        {% for block in section.blocks %}
            @media screen and (min-width: 1181px) {
                .{{block.type}} {
                    width: var(--{{block.type}}-size-desktop);
                    height: var(--{{block.type}}-size-desktop);
                }
            }
            
            @media screen and (min-width: 768px) and (max-width: 1180px) {
                .{{block.type}} {
                    width: var(--{{block.type}}-size-tablet);
                    height: var(--{{block.type}}-size-tablet);
                }
            }
            @media screen and (max-width: 767px) {
                .{{block.type}} {
                    width: var(--{{block.type}}-size-mobile);
                    height: var(--{{block.type}}-size-mobile);
                }
            }
        {% endfor %}
</style>


