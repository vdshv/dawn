<style>
{% comment %} These CSS variables are used in /src/scss/common.scss {% endcomment %}

    :root {
        {% for block in section.blocks %}
            --{{block.type}}_background_color: {{block.settings.background_color}};
            --{{block.type}}_text_color: {{block.settings.text_color}};
            --{{block.type}}_border_radius: {{block.settings.border_radius}}px;
            --{{block.type}}_border_width: {{block.settings.border_width}}px;
            --{{block.type}}_border_color: {{block.settings.border_color}};
            --{{block.type}}_hover_background_color: {{block.settings.hover_background_color}};
            --{{block.type}}_hover_text_color: {{block.settings.hover_text_color}};
            --{{block.type}}_hover_border_color: {{block.settings.hover_border_color}};
            --{{block.type}}_active_background_color: {{block.settings.active_background_color}};
            --{{block.type}}_active_text_color: {{block.settings.active_text_color}};
            --{{block.type}}_active_border_color: {{block.settings.active_border_color}};
        {% endfor %}
    }

    .btn {
        display: inline-block;
    }
    {% for block in section.blocks %}
        .{{block.type}} {
            background-color: var(--{{block.type}}_background_color);
            color: var(--{{block.type}}_text_color);
            border-radius: var(--{{block.type}}_border_radius);
            border: var(--{{block.type}}_border_width) solid var(--{{block.type}}_border_color);
            transition: all 0.25s ease;
        }
        .{{block.type}}:hover {
            background-color: var(--{{block.type}}_hover_background_color);
            color: var(--{{block.type}}_hover_text_color);
            border-color: var(--{{block.type}}_hover_border_color);
        }
        .{{block.type}}:active {
            background-color: var(--{{block.type}}_active_background_color);
            color: var(--{{block.type}}_active_text_color);
            border-color: var(--{{block.type}}_active_border_color);
            transition: all 0.15s ease;
        }
    {% endfor %}
</style>

