<style>
    {% comment %} These CSS variables are used in /src/scss/common.scss {% endcomment %}
        :root {
            {% for block in section.blocks %}
                --{{ block.type }}-padding-y: {{ block.settings.padding_y }}px;
                --{{ block.type }}-padding-x: {{ block.settings.padding_x }}px;
                --{{ block.type }}-tablet-padding-y: {{ block.settings.tablet_padding_y }}px;
                --{{ block.type }}-tablet-padding-x: {{ block.settings.tablet_padding_x }}px;
                --{{ block.type }}-mob-padding-y: {{ block.settings.mob_padding_y }}px;
                --{{ block.type }}-mob-padding-x: {{ block.settings.mob_padding_x }}px;
            {% endfor %}
        }
        
        {% for block in section.blocks %}
            .{{block.type}} {
                padding: var(--{{ block.type }}-padding-y) var(--{{ block.type }}-padding-x);
            }
            @media screen and (max-width: 1180px) {
                .{{block.type}} {
                    padding: var(--{{ block.type }}-tablet-padding-y) var(--{{ block.type }}-tablet-padding-x);
                }
            }
            @media screen and (max-width: 767px) {
                .{{block.type}} {
                    padding: var(--{{ block.type }}-mob-padding-y) var(--{{ block.type }}-mob-padding-x);
                }
            }
        {% endfor %}
</style>


