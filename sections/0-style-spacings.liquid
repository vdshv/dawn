<style>
    {% comment %} These CSS variables are used in /src/scss/common.scss {% endcomment %}
        :root {
            {% for setting in section.settings %}
                --{{ setting[0] }}_desktop_padding: {{ setting[1].desktop }}px;
                --{{ setting[0] }}_tablet_padding: {{ setting[1].tablet }}px;
                --{{ setting[0] }}_mobile_padding: {{ setting[1].mobile }}px;
            {% endfor %}
        }
        
        {% for setting in section.settings %}
            .{{ setting[0] }} {
                padding: var(--{{setting[0]}}_desktop_padding) 0;
            }
            @media screen and (max-width: 1180px) {
                .{{ setting[0] }} {
                    padding: var(--{{ setting[0] }}_tablet_padding) 0;
                }
            }
            @media screen and (max-width: 767px) {
                .{{setting[0]}} {
                    padding: var(--{{ setting[0] }}_mobile_padding) 0;
                }
            }
        {% endfor %}
</style>


