{%- assign s = section.settings -%}

<style>
    @media screen and (max-width: 767px) {
        .grid-{{section.id}} {
            row-gap: {{s.y_gap_mobile}}px;
            column-gap: {{s.x_gap_mobile}}px;
        }
    }

    @media screen and (min-width: 768px) and (max-width: 1180px) {
        .grid-{{section.id}} {
            row-gap: {{s.y_gap_tablet}}px;
            column-gap: {{s.x_gap_tablet}}px;
        }
    }
    @media screen and (min-width: 1181px) {
        .grid-{{section.id}} {
            row-gap: {{s.y_gap_desktop}}px;
            column-gap: {{s.x_gap_desktop}}px;
        }

        .grid-{{section.id}}.slider-desktop {
            display: flex;
            flex-wrap: nowrap;
        }

        .grid-{{section.id}}.slider-desktop.lg-6 .slider__item {
            width: calc((100% - {{s.x_gap_desktop}}px * 5) / 6);
            min-width: calc((100% - {{s.x_gap_desktop}}px * 5) / 6);
        }
    }
</style>

<link rel="stylesheet" type="text/css" href="{{ '0-grid.css' | asset_url}}"/>
<link rel="stylesheet" type="text/css" href="{{ 'component-card.css' | asset_url}}"/>

{% liquid 
    assign slidersEnabled = false

    if s.slider_desktop or s.slider_tablet or s.slider_mobile
        assign slidersEnabled = true
    endif
%}




<slider class="cont {{s.container}} {{s.spacing}}">
    <div class="grid grid-{{section.id}} 
                lg-{{s.column_amount_desktop}}
                md-{{s.column_amount_tablet}}
                sm-{{s.column_amount_mobile}}

                {%- if slidersEnabled == true -%}slider{%- endif %}
                {%- if s.slider_desktop -%}slider-desktop{%- endif %}
                {%- if s.slider_tablet -%}slider-tablet{%- endif %}
                {%- if s.slider_mobile -%}slider-mobile{%- endif -%}
    ">
        {%- for block in section.blocks -%}
            {% case block.type %}
                {% when 'product_list' %}
                    {%- for item in block.settings.collection.products -%}
                        {% render 'card-product', card_product: item, index: forloop.index0  %}
                    {%- endfor -%}
                {% when 'collection_list' %}
                    
                {% when 'articles_list' %}
                    
                {% when 'custom_content' %}
                    
            {% endcase %}
        {%- endfor -%}
    </div>

    {%- if slidersEnabled == true -%}
        <div class="slider__arrow slider__back">←</div>

        <div class="slider__arrow slider__forward">→</div>

        {% comment %} <div class="slider__dots">
            <div class="slider__dot active"></div>
            <div class="slider__dot"></div>
            <div class="slider__dot"></div>
            <div class="slider__dot"></div>
            <div class="slider__dot"></div>
            <div class="slider__dot"></div>
        </div> {% endcomment %}
    {%- endif -%}
</slider>

