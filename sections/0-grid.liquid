{% schema %}
{
  "name": "Versatile grid",
  "tag": "section",
  "settings": [
    {
        "type": "header",
        "content": "GLOBAL - Layout"
    },
    {
        "type": "select",
        "id": "container",
        "label": "Styles -> Containers TYPE",
        "options": [
            {
                "value": "cont--sm",
                "label": "Small"
            },
            {
                "value": "cont--md",
                "label": "Medium"
            },
            {
                "value": "cont--lg",
                "label": "Large"
            }
        ],
        "default": "cont--lg"
    },
    {
        "type": "select",
        "id": "spacing",
        "label": "Styles -> Section Spacing TYPE",
        "options": [
            {
                "value": "space--sm",
                "label": "Small"
            },
            {
                "value": "space--md",
                "label": "Medium"
            },
            {
                "value": "space--lg",
                "label": "Large"
            }
        ],
        "default": "space--lg"
    },
    {
        "type": "header",
        "content": "DESKTOP - Layout"
    },
    {
        "type": "range",
        "id": "column_amount_desktop",
        "min": 1,
        "max": 10,
        "step": 1,
        "label": "Columns amount",
        "default": 4
    },
    {
        "type": "checkbox",
        "id": "slider_desktop",
        "label": "Enable slider",
        "default": false
    },
    {
        "type": "range",
        "id": "x_gap_desktop",
        "min": 0,
        "max": 60,
        "step": 1,
        "label": "Gap between columns",
        "default": 20
    },
    {
        "type": "range",
        "id": "y_gap_desktop",
        "min": 0,
        "max": 60,
        "step": 1,
        "label": "Gap between rows",
        "default": 20
