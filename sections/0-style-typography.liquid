<style>
{% comment %} These CSS variables are used in /src/scss/common.scss {% endcomment %}

    :root {
        {% for block in section.blocks %}
            --{{block.type}}_font_size: {{block.settings.font_size}}px;
            --{{block.type}}_line_height: {{block.settings.line_height}}%;
            --{{block.type}}_letter_spacing: calc({{block.settings.letter_spacing }}em / 100);
            --{{block.type}}_font_weight: {{block.settings.font_weight}};
            --{{block.type}}_text_transform: {{block.settings.text_transform}};
            --{{block.type}}_tablet_font_size: {{block.settings.tablet_font_size}}px;
            --{{block.type}}_mobile_font_size: {{block.settings.mobile_font_size}}px;
            {% if block.type contains 'btn' %}
                --{{block.type}}_padding_x: {{block.settings.padding_x}}px;
                --{{block.type}}_padding_y: {{block.settings.padding_y}}px;
                --{{block.type}}_mobile_padding_x: {{block.settings.mobile_padding_x}}px;
                --{{block.type}}_mobile_padding_y: {{block.settings.mobile_padding_y}}px;
            {% endif %}
        {% endfor %}
    }
    
    {% for block in section.blocks %}
        .{{block.type}} {
            font-size: var(--{{block.type}}_font_size);
            line-height: var(--{{block.type}}_line_height);
            letter-spacing: var(--{{block.type}}_letter_spacing);
            font-weight: var(--{{block.type}}_font_weight);
            text-transform: var(--{{block.type}}_text_transform);

            {% if block.type contains 'btn' %}
                padding: var(--{{block.type}}_padding_y) var(--{{block.type}}_padding_x);
                min-width: {{block.settings.min_width}}px;
            {% endif %}
        }
        @media screen and (max-width: 1180px) {
            .{{block.type}} {
                font-size: var(--{{block.type}}_tablet_font_size);
            }
        }
        @media screen and (max-width: 767px) {
            .{{block.type}} {
                font-size: var(--{{block.type}}_mobile_font_size);
                
                {% if block.type contains 'btn' %}
                    padding: var(--{{block.type}}_mobile_padding_y) var(--{{block.type}}_mobile_padding_x);
                    min-width: {{block.settings.mobile_min_width}}px;
                {% endif %}
            }
        }
    {% endfor %}
</style>



