<style>
{% comment %} These CSS variables are used in /src/scss/common.scss {% endcomment %}

    :root {
        {% for block in section.blocks %}
            --{{ block.type }}_max_width: {{ block.settings.max_width }}px;
        {% endfor %}
    }
    

    .cont {
        width: 100%;
        margin: 0 auto;
    }
    {% for block in section.blocks %}
        .{{ block.type }} {
            max-width: var(--{{ block.type }}_max_width);
        }
    {% endfor %}
    
    .cont--sm {
        max-width: var(--cont--sm_max_width);
    }
    
    .cont--md {
        max-width: var(--cont--md_max_width);
    }
</style>



{% schema %}
{
  "name": "Styles -> Containers",    
  "blocks": [
    {
      "type": "cont--lg",
      "name": "Large",
      "settings": [
        {
          "type": "range",
          "id": "max_width",
          "min": 800,
          "max": 1600,
          "step": 10,
          "unit": "px",
          "label": "Max width",
          "default": 1400
        }
      ]
    },
    {
      "type": "cont--md",
      "name": "Medium",
      "settings": [
        {
          "type": "range",
          "id": "max_width",
          "min": 600,
          "max": 1200,
          "step": 10,
          "unit": "px",
          "label": "Max width",
          "default": 1000
        }
      ]
    },
    {
      "type": "cont--sm",
      "name": "Small",
      "settings": [
        {
          "type": "range",
          "id": "max_width",
          "min": 400,
          "max": 800,
          "step": 10,
          "unit": "px",
          "label": "Max width",
          "default": 600
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Styles -> Containers",
      "settings": {},
      "blocks": [
        {
          "type": "cont--lg"
        },
        {
          "type": "cont--md"
        },
        {
          "type": "cont--sm"
        }
      ]
    }
  ]
}
{% endschema %}
